<Page x:Class="TEst53.Pages.AddEdit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TEst53.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1000"
      Title="ИС - Добавление/редактирование товара">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"></ColumnDefinition>
                <ColumnDefinition Width="300"></ColumnDefinition>
                <ColumnDefinition Width="150"></ColumnDefinition>
                <ColumnDefinition Width="300"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Label x:Name="IdLabel" Content="Id: " Grid.Row="0" Grid.Column="0"></Label>
            <Label Content="Наименование:" Grid.Row="1" Grid.Column="0"></Label>
            <Label Content="Тип партнера:" Grid.Row="2" Grid.Column="0"></Label>
            <Label Content="Рейтинг:" Grid.Row="3" Grid.Column="0"></Label>
            <Label Content="ФИО Директора:" Grid.Row="4" Grid.Column="0"></Label>
            <Label Content="Телефон:" Grid.Row="5" Grid.Column="0"></Label>
            <Label Content="Email:" Grid.Row="6" Grid.Column="0"></Label>


            <Label Content="Регион:" Grid.Row="1" Grid.Column="2"></Label>
            <Label Content="Город:" Grid.Row="2" Grid.Column="2"></Label>
            <Label Content="Улица:" Grid.Row="3" Grid.Column="2"></Label>
            <Label Content="Номер дома:" Grid.Row="4" Grid.Column="2"></Label>
            <Label Content="Индекс:" Grid.Row="5" Grid.Column="2"></Label>

            <TextBox x:Name="IdTExtBox" Grid.Row="0" Grid.Column="1" IsEnabled="False" IsReadOnly="True"></TextBox>
            <TextBox x:Name="NameTextBox" Grid.Row="1" Grid.Column="1" ></TextBox>
            <ComboBox x:Name="TypeComboBox" Grid.Row="2" Grid.Column="1" ></ComboBox>
            <TextBox x:Name="asdsa" Grid.Row="2" Grid.Column="1" ></TextBox>
            

        </Grid>
    </Grid>
</Page>
